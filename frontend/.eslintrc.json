{
  "root": true,
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "@nuxtjs/eslint-config-typescript",
    "prettier",
    "prettier/vue",
    "plugin:nuxt/recommended"
  ],
  "rules": {
    "require-await": "off"
  },
  "overrides": [
    {
      "files": ["*.test.ts", "tests/**.ts"],
      "env": {
        "jest": true
      },
      "extends": ["plugin:jest/recommended"]
    }
  ]
}
